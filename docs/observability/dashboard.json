{
  "dashboard": {
    "title": "Company Junction Performance Dashboard",
    "description": "Performance monitoring for group pagination and details operations",
    "panels": [
      {
        "title": "Request Latency (p50/p95/p99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(groups_page_latency_seconds_bucket[5m]))",
            "legendFormat": "Groups p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(groups_page_latency_seconds_bucket[5m]))",
            "legendFormat": "Groups p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(groups_page_latency_seconds_bucket[5m]))",
            "legendFormat": "Groups p99"
          },
          {
            "expr": "histogram_quantile(0.50, rate(details_page_latency_seconds_bucket[5m]))",
            "legendFormat": "Details p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(details_page_latency_seconds_bucket[5m]))",
            "legendFormat": "Details p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(details_page_latency_seconds_bucket[5m]))",
            "legendFormat": "Details p99"
          }
        ]
      },
      {
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(groups_page_requests_total{ok=\"false\"}[5m]) / rate(groups_page_requests_total[5m])",
            "legendFormat": "Groups Error Rate"
          },
          {
            "expr": "rate(details_page_requests_total{ok=\"false\"}[5m]) / rate(details_page_requests_total[5m])",
            "legendFormat": "Details Error Rate"
          }
        ]
      },
      {
        "title": "Backend Usage Distribution",
        "type": "pie",
        "targets": [
          {
            "expr": "sum(rate(backend_choice_total[5m])) by (backend)",
            "legendFormat": "{{backend}}"
          }
        ]
      },
      {
        "title": "Page Size Clamping",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(page_size_clamped_total[5m])",
            "legendFormat": "Page Size Clamped/sec"
          }
        ]
      },
      {
        "title": "Timeout Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(timeouts_total[5m])",
            "legendFormat": "Timeouts/sec"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
